@{
    ViewData["Title"] = "Delete Movie";
}

@model AddMovieModel

<h3>Are you sure you want to delete @Model.Title?</h3>
<form method="post">
    <input type="hidden" asp-for="MovieId"/>
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="MovieList" class="btn btn-primary">Cancel</a>
</form>